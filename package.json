{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hyrule-compendium",
  "title": "Hyrule Compendium",
  "description": "Uses the Hyrule Compendium API to show creatures, items, and more!",
  "icon": "command-icon.png",
  "author": "colbyfayock",
  "categories": [
    "Other",
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Find Creature",
      "description": "Show the details of a creature",
      "mode": "view",
      "arguments": [
        {
          "name": "name",
          "placeholder": "Name",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.1",
    "@raycast/utils": "^1.6.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
